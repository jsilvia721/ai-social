# ── Docker Compose ─────────────────────────────────────────────────────────────
# docker-compose builds DATABASE_URL automatically from this.
# For local dev outside Docker, set DATABASE_URL directly instead.
POSTGRES_PASSWORD=change_me

# Database (used directly when running outside Docker)
DATABASE_URL="postgresql://user:password@localhost:5432/ai_social"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET=""   # Generate with: openssl rand -base64 32

# Access Control — comma-separated Google emails allowed to sign in
ALLOWED_EMAILS="you@gmail.com,partner@gmail.com"

# Google OAuth (for app login)
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Anthropic
ANTHROPIC_API_KEY=""

# Twitter / X OAuth 2.0
# Create app at: https://developer.twitter.com/en/portal/dashboard
# Required scopes: tweet.read, tweet.write, users.read, offline.access
TWITTER_CLIENT_ID=""
TWITTER_CLIENT_SECRET=""

# Meta (Facebook + Instagram)
# Create app at: https://developers.facebook.com/apps
# Required permissions: pages_show_list, pages_read_engagement, pages_manage_posts,
#                       instagram_basic, instagram_content_publish
META_APP_ID=""
META_APP_SECRET=""

# MinIO (self-hosted S3-compatible storage)
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="change_me_in_production"
MINIO_BUCKET="ai-social"
MINIO_ENDPOINT="http://minio:9000"
MINIO_PUBLIC_URL="https://yourdomain.com/storage"
